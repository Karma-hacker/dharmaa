def pilih_masuk():
	msuk = raw_input("\033[1;97m [\033[1;91mâ€¢\033[1;97mâ€¢\033[1;97m]\033[1;97m ")
	if msuk =="":
		print"\033[1;97m[\033[1;91m!\033[1;97m] Harap Isi Dengan Benar !"
		pilih_masuk()
	elif msuk =="1" or msuk =="01":
		tokenz()
	elif msuk =="0" or msuk =="00":
		keluar()
	else:
		print"\033[1;97m[\033[1;91m!\033[1;97m] Harap Isi Dengan Benar !"
		pilih_masuk()
		
